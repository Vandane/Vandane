<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="<%= %>">
    <title>Vandane</title>
    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <body class="bg-veryLightGray">
    <%- include("../layouts/navbar.ejs") %>

    <section class="container mx-auto mb-32">
      <% if (temple) { %>

      <div
        class="wrapper flex flex-col md:flex-row items-center justify-evenly p-3 md:p-0"
      >
        <div class="left md:w-1/2">
          <div>
            <img
              src="<%= temple.thumbnail %>"
              alt=""
              class="w-full object-cover object-center h-full"
            />
          </div>
          <div class="mt-10">
            <div>
              <h1 class="text-2xl font-Molle font-semibold pb-6">
                <%= temple.title %>
              </h1>
            </div>
            <div class="discription text-xl font-sans">
              <%= temple.discription %>
            </div>
            <div class="aboutTemple text-sm font-Albert mt-5 md:text-base">
              <%- temple.content %>
            </div>
          </div>
        </div>
        <div class="right mt-5 md:w-1/4 md:mt-0">
          <h1 class="text-2xl font-medium title-font mb-4 text-gray-900 border-b-4 border-b-red-500 w-1/2 pb-2">
            Latest Temple
          </h1>
          <div class="flex flex-col flex-wrap md:-m-2 -m-1">
            <% if (latestTemple) { %> <% latestTemple.forEach((temple)=>{ %>
            <div class="p-4">
              
              <div class="h-ful overflow-hidden">
                <a href="/templecontent/<%= temple.slug %>">
                  <img
                    class="lg:h-48 md:h-36 w-full object-cover object-center"
                    src="<%- temple.thumbnail %> "
                    alt="blog"
                  />
                </a>
                <div class="pt-2">
                  <a href="/templecontent/<%= temple.slug %>">
                    <h1
                      class="title-font text-lg font-medium text-gray-900 mb-3"
                    >
                      <%= temple.title %>
                    </h1>
                  </a>
                </div>
              </div>
            </div>
            <% })} %>
          </div>
        </div>
      </div>
      <% } else { %>
      <div>No temple Found</div>
      <% } %>
    </section>

    <%- include("../layouts/footer.ejs")%>

    <script src="/js/app.js"></script>
  </body>
</html>
